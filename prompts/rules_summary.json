[
  {"rule_id": "NE_PAS_BASE", "when_pattern": "ne ... pas / n' ... pas", "file": "rules/10_markers/ne_pas.yaml", "priority": 80, "short": "Verbal bipartite negation; exclude verb from cue", "examples": ["Il n'arrive pas à avaler."]},
  {"rule_id": "NE_COEXISTE_AVEC_DETERMINANT", "when_pattern": "ne + (aux|verb) + [aucun/aucune/pas de]", "file": "rules/10_markers/ne_pas.yaml", "priority": 70, "short": "Co-occurrence: verbal ne + determiner negative (emit both cues)", "examples": ["Aucune récidive n'a été constatée."]},
  {"rule_id": "NI_COORD_DOUBLE", "when_pattern": "ni X ni Y", "file": "rules/10_markers/ni.yaml", "priority": 75, "short": "Negative coordination 'ni...ni...' produce multiple scopes", "examples": ["Ni fièvre ni frissons."]},
  {"rule_id": "AUCUN_DET_BASE", "when_pattern": "aucun/aucune|nul(e)", "file": "rules/10_markers/aucun.yaml", "priority": 80, "short": "Negative determiner as cue; scope handled in 20_scopes", "examples": ["Aucune anomalie détectée."]},
  {"rule_id": "PAS_DE_DET_BASE", "when_pattern": "pas de|pas d'", "file": "rules/10_markers/aucun.yaml", "priority": 70, "short": "'pas de' determiner negative; cue='pas'", "examples": ["Pas de récidive."]},
  {"rule_id": "SANS_BASE", "when_pattern": "sans", "file": "rules/10_markers/sans.yaml", "priority": 70, "short": "Privation marker 'sans' — scope = support + entity GN", "examples": ["Abdomen souple sans masse."]},
  {"rule_id": "SANS_PARTICULARITE_FLAG", "when_pattern": "sans particularité", "file": "rules/20_scopes/sans.yaml", "priority": 85, "short": "Fixed formula 'sans particularité' prefer support+particularity", "examples": ["Examen clinique sans particularité."]},
  {"rule_id": "LEXICAL_NON", "when_pattern": "\\bnon\\b (adj/part) or prefix", "file": "rules/10_markers/lexical.yaml", "priority": 60, "short": "Lexical negation 'non' modifying adjective/participle", "examples": ["Syndrome non compressif."]},
  {"rule_id": "LOCUTION_ABSENCE", "when_pattern": "en l'absence de|absence de", "file": "rules/10_markers/locutions.yaml", "priority": 80, "short": "Locution 'absence de' — cue is the locution, scope = GN after 'de'", "examples": ["En l'absence de fièvre."]},
